            <Button Content="Students" Name="agentsBtn" Style="{StaticResource MainBtnStyle}"  Click="agentsBtn_Click"></Button>
            <Button Content="Attendance" Name="clientsBtn" Style="{StaticResource MainBtnStyle}"  Click="clientsBtn_Click"></Button>
            <Button Content="Admission" Name="reportsBtn" Style="{StaticResource MainBtnStyle}"  Click="reportsBtn_Click"></Button>
            <Button Content="Settings" Name="settingsBtn" Style="{StaticResource MainBtnStyle}"  Click="settingsBtn_Click"></Button>
            <Button Content="Help" Name="helpBtn" Style="{StaticResource MainBtnStyle}"  Click="helpBtn_Click"></Button>
            <Button Content="Close" Name="closeBtn" Style="{StaticResource MainBtnStyle}"  Click="closeBtn_Click"></Button>
        </UniformGrid>
        <UniformGrid DockPanel.Dock="Right" Name="mainUniGrid">
            <my:Signin />
            
        </UniformGrid>
